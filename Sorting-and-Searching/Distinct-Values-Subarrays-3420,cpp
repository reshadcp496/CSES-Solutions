#include <bits/stdc++.h>
using namespace std;
using ll = long long;

void solve() {
  int n;
  cin >> n;
  map<int, int> mp;
  ll ans = 0;
  int last = -1;
  for (int i = 0; i < n; i++) {
    int x;
    cin >> x;
    if (mp.count(x)) {
      last = max(last, mp[x]);
    }
    ans += i - last;
    mp[x] = i;
  }
  cout << ans << '\n';
}

signed main() {
  cin.tie(0)->sync_with_stdio(0);
  solve();
}
